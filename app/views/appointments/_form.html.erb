<%= simple_form_for(appointment) do |f| %>
	<%= f.error_notification %>
	<div class="alert alert-error" id="appointment_not_available" style="display: none;">
  	<a class="close" data-dismiss="alert">&#215;</a>
  	<div><%= I18n.t('appointments.none_available') %></div>
  </div>
  <div class="well">
		<%= link_to I18n.t('back'), appointments_path, :class => 'btn btn-secondary' %>
		<%= f.button :submit, I18n.t('update'), :class => 'btn btn-success' %>
	</div>
	<div class="form-inputs">
		<%= f.input :show_new_customer, as: :hidden %>
		<%= f.input :show_new_service, as: :hidden %>
		<%= f.input :show_new_staff_member, as: :hidden %>
		
		<%= render :partial => 'form_inputs', :locals => { :f => f, :appointment => @appointment } %>
	</div>
	<div class="well">
		<%= link_to I18n.t('back'), appointments_path, :class => 'btn btn-secondary' %>
		<%= f.button :submit, I18n.t('update'), :class => 'btn btn-success' %>
	</div>
<% end %>
