<h2><%= I18n.t('auth.change_password') %></h2>

<%= render 'layouts/messages' %>

<div class="container-fluid">
  <div class="row">
    <div class="span4 well">
      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, :as => :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password, :label => I18n.t('customers.password'), :required => true, :autofocus => true %>
          <%= f.input :password_confirmation, :label => I18n.t('customers.password_confirmation'), :required => true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, I18n.t('submit'), :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <%= render "devise/shared/links" %>
  </div> 
</div>
