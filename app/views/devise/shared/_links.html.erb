<ul class="no_bullets inline">
	<%- if controller_name != 'sessions' %>
	  <li><%= link_to I18n.t('auth.log_in'), new_session_path(resource_name), :class => 'btn btn-secondary' %></li>
	<% end -%>

	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	  <li><%= link_to I18n.t('auth.sign_up'), new_registration_path(resource_name), :class => 'btn btn-secondary' %></li>
	<% end -%>

	<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
	  <li><%= link_to I18n.t('auth.password_forgotten'), new_password_path(resource_name), :class => 'btn btn-secondary' %></li>
	<% end -%>

	<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	  <li><%= link_to I18n.t('auth.confirmation_instructions_lost'), new_confirmation_path(resource_name), :class => 'btn btn-secondary' %></li>
	<% end -%>

	<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
	  <li><%= link_to I18n.t('auth.unlock_instructions_lost'), new_unlock_path(resource_name), :class => 'btn btn-secondary' %></li>
	<% end -%>

	<%- if devise_mapping.omniauthable? %>
	  <%- resource_class.omniauth_providers.each do |provider| %>
	    <li><%= link_to I18n.t('auth.log_in_with_provider', :provider => provider.to_s.titleize), omniauth_authorize_path(resource_name, provider), :class => 'btn btn-secondary' %></li>
	  <% end -%>
	<% end -%>
</ul>
