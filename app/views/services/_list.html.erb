<table class="table table-striped table-hover table-bordered">
  <tr>
    <th><%= I18n.t('services.name') %></th>
    <th><%= I18n.t('services.duration') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% services.each do |service| %>
  <tr>
    <td><%= service.name %></td>
    <td><%= service.duration %></td>
    <td class="button_column"><%= link_to I18n.t('show'), service, :class => 'btn btn-mini' %></td>
    <td class="button_column"><%= link_to I18n.t('edit'), edit_service_path(service), :class => 'btn btn-mini' %></td>
    <td class="button_column">
      <%= link_to I18n.t('destroy'), service, :title => I18n.t('destroy'), data: { confirm: I18n.t('confirm') }, 'data-message_body' => I18n.t('modal.message_body'), 'data-cancel_text' => I18n.t('cancel'), 'data-confirmed_text' => I18n.t('modal.confirmed_text'), method: :delete, :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
<% end %>
</table>

<%= will_paginate services %>
