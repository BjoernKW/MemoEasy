<div class="span6 well">
	<%= simple_form_for(@slot) do |f| %>
	  <div class="form-inputs">
	  	<%= render :partial => 'form_inputs', :locals => { :f => f, :available_days => @available_days } %>
	  </div>
	  <div class="form-actions">
	  	<%= link_to I18n.t('back'), slots_path, :class => 'btn btn-secondary' %>
	    <%= f.button :submit, I18n.t('update'), :class => 'btn btn-success' %>
	  </div>
	<% end %>
</div>
