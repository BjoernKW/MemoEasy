<table class="table table-striped table-hover table-bordered">
  <tr>
    <th><%= I18n.t('customers.last_name') %></th>
    <th><%= I18n.t('customers.first_name') %></th>
    <th><%= I18n.t('customers.email') %></th>
    <th><%= I18n.t('customers.mobile_phone') %></th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% customers.each do |customer| %>
  <tr>
    <td><%= customer.last_name %></td>
    <td><%= customer.first_name %></td>
    <td><a href="mailto:<%= customer.email %>"><%= customer.email %></a></td>
    <td><a href="tel:<%= customer.mobile_phone %>"><%= customer.mobile_phone %></a></td>
    <td>
      <a data-toggle="modal" data-target="#customer_link_modal_<%= customer.id %>" href="<%= customer_link_customer_path(customer) %>" class="btn btn-mini" type="button"><%= I18n.t('customers.customer_link') %></a>
      <%= render :partial => 'customer_link_modal', :locals => { :customer => customer } %>
    </td>
    <td class="button_column"><%= link_to I18n.t('show'), customer, :class => 'btn btn-mini' %></td>
    <td class="button_column"><%= link_to I18n.t('edit'), edit_customer_path(customer), :class => 'btn btn-mini' %></td>
    <td class="button_column">
      <%= link_to I18n.t('destroy'), customer, :title => I18n.t('destroy'), data: { confirm: I18n.t('confirm') }, 'data-message_body' => I18n.t('modal.message_body'), 'data-cancel_text' => I18n.t('cancel'), 'data-confirmed_text' => I18n.t('modal.confirmed_text'), method: :delete, :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
<% end %>
</table>

<%= will_paginate customers %>
